                <svg width="8" height="4"> 
                  <use href="#nav-arrow-icn"></use>
                </svg>
              </h3>
            </div>
            <div class="filter__block">
              <h3 class="filter__title"><span>Цена</span>
                <svg width="8" height="4"> 
                  <use href="#nav-arrow-icn"></use>
                </svg>
              </h3>
              <div class="filter__content">
                <div class="filter__price"> 
                  <input class="filter__price-from" type="text" placeholder="от">
                  <input class="filter__price-before" type="text" placeholder="до">
                </div>
                <div class="filter__radios"> 
                  <div class="filter__radio"> 
                    <input type="radio" id="rad1" name="price">
                    <label for="rad1">5000-10000 Р</label>
                  </div>
                  <div class="filter__radio"> 
                    <input type="radio" id="rad2" name="price">
                    <label for="rad2">10000-20000 Р</label>
                  </div>
                  <div class="filter__radio"> 
                    <input type="radio" id="rad3" name="price">
                    <label for="rad3">20000 и дороже</label>
                  </div>
                  <div class="filter__radio"> 
                    <input type="radio" id="rad5" name="price">
                    <label for="rad5">Не важно</label>
                  </div>
                </div>
              </div>
            </div>
            <div class="filter__buttons"> 
              <button class="btn-default">Показать</button>
              <button class="btn-light">Сбросить</button>
            </div>
          </div>
          <div class="catalog__content"> 
            <div class="catalog__params">
              <select class="catalog__select">
			   {% for sorts in sorts %}
					{% if sorts.value == '%s-%s'|format(sort, order) %}
                <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
					{% else %} 
				<option value="{{ sorts.href }}">{{ sorts.text }}</option>	
					{% endif %}
					{% endfor %}
              </select>
              <button class="catalog__btn-filter" id="openFilter"> 
                <svg width="22" height="22">
                  <use href="#settings-icn"></use>
                </svg>
              </button>
            </div>
            <div class="catalog__inner"> 
              {% for product in products %}
			  <div class="card"> 
                <div class="card__pic"><img src="{{ product.thumb }}" alt="{{ product.name }}"></div>
                <div class="card__content">
                  {% if product.special %}<div class="card__price"> <span class="card__price-new">{{ product.special }}</span><span class="card__price-old">{{ product.price }}</span></div><a class="card__descr" href="{{ product.href }}">{{ product.name }}</a>{% else %}
				  <div class="card__price"> <span class="card__price-new">{{ product.price }}</span></div><a class="card__descr" href="{{ product.href }}">{{ product.name }}</a>{% endif %}
                </div>
                <a href="{{ product.href }}"><button class="btn-default card__btn">Выбрать</button></a>
              </div>
          {% endfor %}
            </div>
            <ul class="catalog__pagination"> 
              {{ pagination }}
            </ul>
          </div>
        </div>
{{ footer }} 





